systemName "Trajetos Metro Londres"

usecase "Consulta de Trajetos" {
  version "0.1" type "Consulta" user "set_user" date "08/10/2020"
  actor usersystem "Usuário do sistema"
  
  preCondition "first_condition", "second_condition"
  
  basic {
    step 1 usersystem "Usuário seleciona a opção 1"
    step 2 system "Espera usuário informar estação de origem"
    step 3 usersystem "Usuário informa estação de origem"
    step 4 system "Espera usuário informar estação de destino" ef[1]
    step 5 usersystem "Usuário informa estação de destino"
    step 6 system "Espera usuário informar quantidade de trajetos" ef[2]
    step 7 usersystem "Usuário informa a quantidade de trajetos"
    
    step 8 system "Espera usuário informar se deseja ou não excluir linha"
    step 9 usersystem "Usuário informa com 'S' ou 'N'"
    step 10 system "Imprime os trajetos disponíveis, com a quantidade de trajetos que foi especificada pelo usuário"
    
  }
  
  exception 1 "Usuário informa estação de origem inexistente" {  
	step 1 system "Imprime novamente, uma messagem solicitando que o usuário informe a estação" bs 3
  }
  
  exception 2 "Usuário informa estação de destino inexistente" {  
	step 1 system "Imprime novamente, uma messagem solicitando que o usuário informe a estação" bs 3
  }
  
  postCondition "Imprime trajetos", "other condition"
}

